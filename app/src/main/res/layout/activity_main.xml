<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivPetListIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/catdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWelcome"
        app:layout_constraintEnd_toStartOf="@+id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/catdp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:text="Welcome~"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/courgette"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPetListIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgBtnViewPet"
        android:layout_width="97dp"
        android:layout_height="96dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="37dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:foreground="@drawable/view"
        android:src="@drawable/view"
        app:layout_constraintBottom_toBottomOf="@+id/tvViewPet"
        app:layout_constraintEnd_toStartOf="@+id/tvWelcome"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <TextView
        android:id="@+id/tvViewPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="153dp"
        android:text="View Pet"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:fontFamily="@font/courgette"
        app:layout_constraintBottom_toBottomOf="@+id/tvMedicalRecords"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnViewPet"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <ImageButton
        android:id="@+id/imgBtnAddPet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:foreground="@drawable/add"
        android:src="@drawable/add"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnViewPet"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnBookAppt"
        app:layout_constraintStart_toStartOf="@+id/tvAddNewPet"
        app:layout_constraintTop_toTopOf="@+id/imgBtnViewPet" />

    <TextView
        android:id="@+id/tvAddNewPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:text="Add New Pet"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="@font/courgette"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnAddPet" />

    <ImageButton
        android:id="@+id/imgBtnMedicalRecords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="28dp"
        android:foreground="@drawable/record2"
        android:src="@drawable/record2"
        app:layout_constraintBottom_toBottomOf="@+id/tvMedicalRecords"
        app:layout_constraintEnd_toEndOf="@+id/tvMedicalRecords"
        app:layout_constraintStart_toStartOf="@+id/imgBtnViewPet"
        app:layout_constraintTop_toBottomOf="@+id/tvViewPet" />

    <TextView
        android:id="@+id/tvMedicalRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginBottom="33dp"
        android:text="Medical Records"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:fontFamily="@font/courgette"
        app:layout_constraintBottom_toTopOf="@+id/imgBtnBills"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnBills" />

    <ImageButton
        android:id="@+id/imgBtnBookAppt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="27dp"
        android:foreground="@drawable/booking"
        android:src="@drawable/booking"
        app:layout_constraintBottom_toBottomOf="@+id/tvBookApt"
        app:layout_constraintEnd_toEndOf="@+id/tvBookApt"
        app:layout_constraintStart_toStartOf="@+id/tvAddNewPet"
        app:layout_constraintTop_toBottomOf="@+id/tvAddNewPet" />

    <TextView
        android:id="@+id/tvBookApt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="279dp"
        android:text="Book Appointment"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:fontFamily="@font/courgette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imgBtnBills"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:layout_marginBottom="19dp"
        android:src="@drawable/bill1"
        app:layout_constraintBottom_toBottomOf="@+id/tvBills"
        app:layout_constraintEnd_toEndOf="@+id/tvBookApt"
        app:layout_constraintStart_toStartOf="@+id/imgBtnViewPet"
        app:layout_constraintTop_toBottomOf="@+id/tvBookApt" />

    <TextView
        android:id="@+id/tvBills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="129dp"
        android:layout_marginBottom="131dp"
        android:text="Bills"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:fontFamily="@font/courgette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgBtnBills"
        app:layout_constraintTop_toBottomOf="@+id/tvBookApt" />

</androidx.constraintlayout.widget.ConstraintLayout>